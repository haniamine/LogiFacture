<p id="notice"><%= notice %></p>

<h1>Factures</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Montantttc</th>
      <th>Montantht</th>
      <th>Montanttva</th>
      <th>Estvalide</th>
      <th>Estregle</th>
      <th>Modereglement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @factures.each do |facture| %>
      <tr>
        <td><%= facture.date %></td>
        <td><%= facture.montantTTC %></td>
        <td><%= facture.montantHT %></td>
        <td><%= facture.montantTVA %></td>
        <td><%= facture.estValide %></td>
        <td><%= facture.estRegle %></td>
        <td><%= facture.modeReglement %></td>
        <td><%= link_to 'Show', facture %></td>
        <td><%= link_to 'Edit', edit_facture_path(facture) %></td>
        <td><%= link_to 'Destroy', facture, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

